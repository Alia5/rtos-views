{
    "name": "rtos-views",
    "displayName": "RTOS Views",
    "description": "RTOS views for microcontrollers",
    "version": "0.0.2",
    "publisher": "mcu-debug",
    "repository": {
        "type": "git",
        "url": "https://github.com/mcu-debug/rtos-views"
    },
    "bugs": {
        "url": "https://github.com/mcu-debug/rtos-views/issues"
    },
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "icon.png",
    "keywords": [
        "cortex-debug",
        "cppdbg",
        "embedded",
        "rtos",
        "cortex"
    ],
    "activationEvents": [
        "onDebugResolve:cortex-debug",
        "onDebugResolve:cppdbg",
        "onDebugResolve:cspy",
        "onCommand:mcu-debug.rtos-views.helloWorld"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "category": "RTOS Views",
                "command": "mcu-debug.rtos-views.helloWorld",
                "title": "Hello World"
            },
            {
                "category": "RTOS Views",
                "command": "mcu-debug.rtos-views.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "category": "RTOS Views",
                "command": "mcu-debug.rtos-views.toggleRTOSPanel",
                "title": "Toggle RTOS Panel"
            }
        ],
        "properties": {
            "mcu-debug.rtos-views.showRTOS": {
                "type": "boolean",
                "default": true,
                "description": "Enable/Disable display of RTOS panel"
            }
        },
        "viewsContainers": {
            "panel": [
                {
                    "id": "rtos-views",
                    "title": "xRTOS",
                    "icon": "images/unknown.svg"
                }
            ]
        },
        "views": {
            "rtos-views": [
                {
                    "id": "rtos-views.rtos",
                    "type": "webview",
                    "name": "xRTOS",
                    "when": "mcu-debug.rtos-views:showRTOS"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "mcu-debug.rtos-views.refresh",
                    "when": "view == rtos-views.rtos",
                    "group": "navigation@99"
                }
            ]
        }
    },
    "scripts-unused": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -noEmit && node .esbuild.config.js --analyze",
        "lint": "eslint src --ext ts",
        "watch": "node .esbuild.config.js --watch --analyze",
        "test": "node ./src/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.69.0",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "@vscode/test-electron": "^2.1.5",
        "esbuild": "^0.14.53",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "ts-loader": "^9.4.1",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "@vscode/debugprotocol": "^1.57.0",
        "@vscode/webview-ui-toolkit": "^1.1.0",
        "debug-tracker-vscode": "^0.0.12"
    },
    "extensionDependencies": [
        "mcu-debug.debug-tracker-vscode"
    ]
}
